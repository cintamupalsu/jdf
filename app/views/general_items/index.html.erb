
<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <h1>General Items</h1>
  </div>
  <div class="card-body">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>Title</th>
          <th>Subtitle</th>
          <th>Content</th>
          <th>Item type</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @general_items.each do |general_item| %>
          <tr>
            <td><%= general_item.title %></td>
            <td><%= general_item.subtitle %></td>
            <td><%= general_item.content %></td>
            <td>
              <% case general_item.item_type_id %>
              <% when 1 then %>
                News
              <% else %>
                Undefined
              <% end %>
            </td>
            <td><%= link_to 'Show', general_item, class:"btn btn-outline-primary btn-sm" %></td>
            <td><%= link_to 'Edit', edit_general_item_path(general_item), class:"btn btn-outline-warning btn-sm" %></td>
            <td><%= link_to 'Destroy', general_item, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>

  <%= link_to 'New General Item', new_general_item_path, class:"btn btn-outline-success btn-sm" %>
</div>
