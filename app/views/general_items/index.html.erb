<p id="notice"><%= notice %></p>

<h1>General Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Content</th>
      <th>Item type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @general_items.each do |general_item| %>
      <tr>
        <td><%= general_item.title %></td>
        <td><%= general_item.subtitle %></td>
        <td><%= general_item.content %></td>
        <td><%= general_item.item_type_id %></td>
        <td><%= link_to 'Show', general_item %></td>
        <td><%= link_to 'Edit', edit_general_item_path(general_item) %></td>
        <td><%= link_to 'Destroy', general_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

